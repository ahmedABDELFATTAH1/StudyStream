<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Announcements.AddAnnouncement">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_gravity="center">


        <TextView
            style="@style/LayoutTitle"
            android:text="Add a New Announcement"
            android:textSize="19sp"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_gravity="center">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Title:"
                style="@style/EditTextTitle"/>

            <EditText
                android:id="@+id/new_Announcement_Title_EditText"
                style="@style/EditTextStyle"
                android:layout_height="wrap_content"
                android:ems="10"
                android:inputType="textPersonName"
                android:maxLines="1"
                android:hint="Announcement's title"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="@style/EditTextTitle"
                android:text="Content:"/>

            <EditText
                style="@style/EditTextStyle"
                android:id="@+id/new_Announcement_Content_EditText"
                android:ems="10"
                android:gravity="top"
                android:minLines="4"
                android:maxLines="8"
                android:inputType="textMultiLine"
                android:hint="What's up?"/>

            <Button
                android:id="@+id/new_Announcement_btn"
                style="@style/Button"
                android:onClick="AddAnnouncement"
                android:text="Add" />

        </LinearLayout>
        </LinearLayout>
    </ScrollView>
